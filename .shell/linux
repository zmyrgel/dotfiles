# Linux specific shell configs -*- mode: sh; coding: utf-8-unix; -*-

# ArchLinux
if [[ -f /etc/arch-release ]]; then
    alias pacu='sudo pacman -Syu'
    alias paci='sudo pacman -S'
    alias pacs='sudo pacman -Ss'
    alias pacU='sudo pacman -U'

    if [ -x /usr/share/eclipse ]; then
        export PATH=$PATH:/usr/share/eclipse
    fi
fi

# debian stuff
if [[ -r /etc/debian_version ]] ; then
    alias acs='apt-cache search'
    alias acsh='apt-cache show'
    alias acp='apt-cache policy'
    alias adg="apt-get dist-upgrade"
    alias agi="apt-get install"
    alias ati="aptitude install"
    alias ag="apt-get upgrade"
    alias au="apt-get update"
    alias -a up="aptitude update ; aptitude safe-upgrade"
    alias dbp='dpkg-buildpackage'
    alias ge='grep-excuses'

    # debian upgrade
    upgrade() {
        if [[ -z "$1" ]] ; then
            $SUDO apt-get update
            $SUDO apt-get -u upgrade
        else
            ssh $1 $SUDO apt-get update
            # ask before the upgrade
            local dummy
            ssh $1 $SUDO apt-get --no-act upgrade
            echo -n 'Process the upgrade?'
            read -q dummy
            if [[ $dummy == "y" ]] ; then
                ssh $1 $SUDO apt-get -u upgrade --yes
            fi
        fi
    }
fi

# Slackware
if [ -r /etc/slackware-version ]; then
    if [ $(uname -m) == "x86_64" ]; then
	export ARCH=x86_64
        export PATH=$PATH:/usr/lib64/java/bin:/usr/lib64/kde4/libexec:/usr/lib64/qt/bin
    else
	export ARCH=i386
        export PATH=$PATH:/usr/lib/java/bin:/usr/lib/kde4/libexec:/usr/lib/qt/bin
    fi
    export PATH=$PATH:/usr/share/texmf/bin
fi
