# Variables -*- mode: sh; coding: utf-8-unix; -*-

HISTSIZE=10000
HISTFILE=$HOME/.sh_history
PAGER=less
LESS="-i -M -q -S -Sm -F -g --no-init"
CVS_RSH=ssh

export HISTSIZE HISTFILE PAGER LESS CVS_RSH

if [ -x $(which mg) ]
then
	VISUAL='mg'
else
	VISUAL='vi'
fi

ALTERNATE_EDITOR="$VISUAL"
EDITOR="$VISUAL"
VISUAL="$VISUAL"
FCEDIT="$VISUAL"
export ALTERNATE_EDITOR EDITOR VISUAL FCEDIT

### PATH ###
PATH=$HOME/bin:/bin:/sbin:/usr/bin:/usr/sbin
if [ -d /usr/X11R6/bin ]
then
	PATH=$PATH:/usr/X11R6/bin
fi
PATH=$PATH:/usr/local/bin:/usr/local/sbin

if [ -d /usr/games ]
then
	PATH=$PATH:/usr/games
fi

if [ -d /usr/ports/infrastructure/bin ]
then
	PATH=$PATH:/usr/ports/infrastructure/bin
fi

if [ -d $HOME/npm/bin ]
then
	PATH=$HOME/npm/bin:$PATH
fi

export PATH

GOPATH=$HOME/workspace
export GOPATH
add_path $GOPATH/bin

if [ -d /usr/local/gerbil ]
then
	GERBIL_HOME=/usr/local/gerbil
	export GERBIL_HOME
	add_path /usr/local/gerbil/bin
fi
